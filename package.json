{
  "name": "yrcapture",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "윈도우용 캡처 도구입니다. 영역/창/전체 화면/웹페이지 캡처와 결과 편집(펜, 도형, 모자이크, 텍스트, 자르기)을 지원합니다. 캡처 이미지는 메모리에 보관되며, 저장 버튼을 눌러야 파일로 저장됩니다.",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "boolean": "^3.2.0",
    "buffer-crc32": "^0.2.13",
    "cacheable-lookup": "^5.0.4",
    "cacheable-request": "^7.0.4",
    "clone-response": "^1.0.3",
    "debug": "^4.4.3",
    "decompress-response": "^6.0.0",
    "defer-to-connect": "^2.0.1",
    "define-data-property": "^1.1.4",
    "define-properties": "^1.2.1",
    "detect-node": "^2.1.0",
    "end-of-stream": "^1.4.5",
    "env-paths": "^2.2.1",
    "es-define-property": "^1.0.1",
    "es-errors": "^1.3.0",
    "es6-error": "^4.1.1",
    "escape-string-regexp": "^4.0.0",
    "extract-zip": "^2.0.1",
    "fd-slicer": "^1.1.0",
    "fs-extra": "^8.1.0",
    "get-stream": "^5.2.0",
    "global-agent": "^3.0.0",
    "globalthis": "^1.0.4",
    "gopd": "^1.2.0",
    "got": "^11.8.6",
    "graceful-fs": "^4.2.11",
    "has-property-descriptors": "^1.0.2",
    "http-cache-semantics": "^4.2.0",
    "http2-wrapper": "^1.0.3",
    "json-buffer": "^3.0.1",
    "json-stringify-safe": "^5.0.1",
    "jsonfile": "^4.0.0",
    "keyv": "^4.5.4",
    "lowercase-keys": "^2.0.0",
    "matcher": "^3.0.0",
    "mimic-response": "^1.0.1",
    "ms": "^2.1.3",
    "normalize-url": "^6.1.0",
    "object-keys": "^1.1.1",
    "once": "^1.4.0",
    "p-cancelable": "^2.1.1",
    "pend": "^1.2.0",
    "progress": "^2.0.3",
    "pump": "^3.0.3",
    "quick-lru": "^5.1.1",
    "resolve-alpn": "^1.2.1",
    "responselike": "^2.0.1",
    "roarr": "^2.15.4",
    "semver": "^6.3.1",
    "semver-compare": "^1.0.0",
    "serialize-error": "^7.0.1",
    "sprintf-js": "^1.1.3",
    "sumchecker": "^3.0.1",
    "type-fest": "^0.13.1",
    "undici-types": "^7.16.0",
    "universalify": "^0.1.2",
    "wrappy": "^1.0.2",
    "yauzl": "^2.10.0"
  },
  "build": {
    "appId": "com.yrcapture.app",
    "productName": "YRcapture",
    "asar": true,
    "files": [
      "src/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/img/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YRcapture",
      "installerIcon": "src/img/logo.ico",
      "uninstallerIcon": "src/img/logo.ico",
      "runAfterFinish": true,
      "include": "build/installer.nsh",
      "installerLanguages": [
        "ko_KR"
      ],
      "language": "1042",
      "menuCategory": "YRcapture",
      "uninstallDisplayName": "YRcapture",
      "artifactName": "YRcapture-Setup-${version}.exe"
    }
  }
}
